.box
    background-color: rgb(255, 255, 255)
    border 1px solid #d6d6d6
    border-radius 20px
    width: 600px
    position: absolute
    .inside
        padding:16px
        font-family: 'M PLUS 1 Code', sans-serif;
    .header 
        background-color: rgb(238, 192, 138)
        border-top-left-radius: 20px
        border-top-right-radius: 20px
        a
            img
                display: block
                width: 32%
                margin: 0px auto
    .from-control
        width: 90%
    .btn-success
        width: 100%  
    

    
